<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700" rel="stylesheet">

    <link rel="stylesheet" href="~/Assets/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/css/animate.css">
    <link rel="stylesheet" href="~/Assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Assets/css/aos.css">
    <link rel="stylesheet" href="~/Assets/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Assets/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Assets/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/Assets/css/flaticon.css">
    <link rel="stylesheet" href="~/Assets/css/icomoon.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    @*<a href="/"><img src="~/Assets/images/Banner.jpg" width="100%"></img></a>*@
</head>
<body>

    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <div class="navbar-collapse navbar-right" id="collapsibleNavbar">
            <ul class="navbar-nav ml-auto">

                @if (Session["TipoUsuario"].ToString() == "1")
                {

                    <li class="form-inline" style="margin-left: -20%; margin-right: 5%">
                        @Html.ActionLink("Crear Cita", "Index", "Citas", null, new { @style = "color:#FFFFFF" })
                    </li>
                    <li class="form-inline" style="margin-right:5%">
                        @Html.ActionLink("Perfil", "Perfil", "Perfil", null, new { @style = "color:#FFFFFF" })
                    </li>
                    <form class="form-inline" style="margin-right:3%">
                        <button class="btn btn-outline-light" type="button">@Html.ActionLink("Cerrar Sesión", "CerrarSession", "Login", null, new { @style = "color:#FFFFFF" })</button>
                    </form>

                }
                else
                {
                    <li class="form-inline" style="margin-left: -20%; margin-right: 5%">
                        @Html.ActionLink("Citas", "Index", "Citas", null, new { @style = "color:#FFFFFF" })
                    </li>
                    <li class="form-inline" style="margin-right:5%">
                        @Html.ActionLink("Pacientes", "ConsultaPacientes", "Paciente", null, new { @style = "color:#FFFFFF" })
                    </li>
                    <li class="form-inline" style="margin-right:5%">
                        @Html.ActionLink("Perfil", "Perfil", "Perfil", null, new { @style = "color:#FFFFFF" })
                    </li>
                    <form class="form-inline" style="margin-right:3%">
                        <button class="btn btn-outline-light" type="button">@Html.ActionLink("Cerrar Sesión", "CerrarSession", "Login", null, new { @style = "color:#FFFFFF" })</button>
                    </form>
                }

            </ul>
        </div>
    </nav>
    <!-- END nav -->

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-family:'Eras ITC'">&copy; @DateTime.Now.Year / Desarrollado por: Jhonsel Josué Díaz Chacón - Kevin Martín Fallas Alfaro - Ana Gabriela Mora Salas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)

</body>
</html>
