@model Entidades.ETL.PersonaETL


<div id="datosPaciente" class="container-fluid col-10">
    <form>

        <label style="color:black"><h3><b>Datos del Paciente</b></h3></label>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="">Identificación</label>
                <input type="text" class="form-control" id="Model_Identificacion" onfocusout="datosPaciente(this.value)">
            </div>
            <div class="form-group col-md-3">
                <label for="">Nombre Completo</label>
                <input type="text" class="form-control" id="Model_Nombre">
            </div>
            <div class="form-group col-md-3">
                <label for="">Primer Apellido</label>
                <input type="text" class="form-control" id="Model_PrimerApellido">
            </div>
            <div class="form-group col-md-3">
                <label for="">Segundo Apellido</label>
                <input type="text" class="form-control" id="Model_SegundoApellido">
            </div>
            <div class="form-group col-md-2">
                <label for="">Teléfono</label>
                <input type="text" class="form-control" id="Model_Telefono">
            </div>
            <div class="form-group col-md-3">
                <label for="">Correo Electrónico</label>
                <input type="email" class="form-control" id="Model_Correo" readonly="readonly">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-1">
                <label for="">Edad</label>
                <input type="text" class="form-control" id="Model_Edad">
            </div>
            <div class="form-group col-md-1">
                <label>Sexo</label>
                <input type="text" class="form-control" id="Model_Sexo">
            </div>
        </div>        
        <br />
        <label style="color:black"><h4><b>Dirección</b></h4></label>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label>Provincia</label>
                <input type="text" class="form-control" id="Model_Provincia">
            </div>
            <div class="form-group col-md-2">
                <label>Cantón</label>
                <input type="text" class="form-control" id="Model_Canton">
            </div>
            <div class="form-group col-md-2">
                <label>Distrito</label>
                <input type="text" class="form-control" id="Model_Distrito">
            </div>
        </div>
    </form>
</div>
