@model Entidades.ETL.PersonaETL
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>


    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="~/Assets/css/login.css" rel="stylesheet" id="bootstrap-css">

</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top sticky-top" id="ftco-navbar">
        <div class="container-fluid">

            <a class="navbar-brand" href="/">Denta<span>Care</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>



            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item nav-link active">@Html.ActionLink("Citas Programadas", "Citas", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Nosotros", "Nosotros", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Servicios", "Servicios", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Promociones de Temporada", "Promociones", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Contacto", "Contacto", "Home")</li>

                    <li class="nav-item nav-link">@Html.ActionLink("Login", "Login", "Login")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <h1 style="color:blue">@ViewBag.nombre </h1>
    </div>


    <div class="login-reg-panel" style="position: relative;">
        <div class="login-info-box">
            <h2>Have an account?</h2>
            <p>Lorem ipsum dolor sit amet</p>
            <label id="label-register" for="log-reg-show">Login</label>
            <input type="radio" name="active-log-panel" id="log-reg-show" checked="checked">
        </div>

        <div class="register-info-box">
            <h2>Don't have an account?</h2>
            <p>Lorem ipsum dolor sit amet</p>
            <label id="label-login" for="log-login-show">Register</label>
            <input type="radio" name="active-log-panel" id="log-login-show">
        </div>

        <div class="white-panel">
            <div class="login-show">
                <h2>LOGIN</h2>
                <input type="text" placeholder="Email">
                <input type="password" placeholder="Password">
                <input type="button" value="Login">
                <a href="">Forgot password?</a>
            </div>

            <form method="POST">

                <div class="register-show container">
                    <div class="row justify-content-lg-center">
                        <h2 style="color:black;" class="align-content-center">REGISTER</h2>
                    </div>
                    <div class="row">
                        <div class="register-show col-6">
                            @Html.TextBoxFor(model => Model.Nombre,new { @placeholder = "Nombre", @class = "cntrol"})
                            @Html.TextBoxFor(model => Model.PrimerApellido, new { @placeholder = "Primer Apellido", @class = "cntrol" } )
                            @Html.TextBoxFor(model => Model.SegundoApellido, new { @placeholder = "Segundo Apellido", @class = "cntrol" } )
                            @Html.TextBoxFor(model => Model.Identificacion, new { @placeholder = "Identificacion", @class = "cntrol" } )
                        </div>
                        <div class="register-show col-6">
                            @Html.TextBoxFor(model => Model.Telefono, new { @placeholder = "Telefono", @class = "cntrol" } )
                            @Html.TextBoxFor(model => Model.Correo, new { @placeholder = "Correo", @class = "cntrol" } )
                            <input type="password" placeholder="Contraseña">
                            <input type="password" name="Contrasena" placeholder="Confirm Password">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </div>
                </div>
            </form>



        </div>
    </div>
    <script src="~/Assets/js/login.js"></script>
</body>
</html>
